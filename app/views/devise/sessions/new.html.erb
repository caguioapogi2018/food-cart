<main class="login-form">
<div class="container">
  <h1>
    <center>Log-in</center>
  </h1>

    <div class="row">
      <div class='col-xs-12'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-4">
              <%= f.label :email, "EMAIL :" %>
            </div>
            <div class="col-sm-4">
              <%= f.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-sm-4">
              <%= f.label :password, "PASSWORD :" %><br/>
            </div>
            <div class="col-sm-4">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "current-password" %>
            </div>
          </div>

          </div>
          </div>
          <center><%= f.submit "Log in", class: 'btn btn-primary btn-lg' %></center>
        <% end %>
        <%= render "devise/shared/links" %>
</div>

</main>



