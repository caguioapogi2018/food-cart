<h1> LIST OF FOODS </h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  <%= @foods.each do |food|%>
    <tr>
      <td><%= food.title %></td>
      <td><%= food.category %></td>
      <td><%= food.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>