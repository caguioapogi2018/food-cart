<h1>
  <center>Create Food Post</center>
</h1>
<div class="panel">
  <%= form_for @food do |f| %>
    <center>
      <div class="form-group">
          <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.select :category, options_for_select([["Meat Food", "Meat Food"], ["Vegetable Food", "Vegetable Food"]]) %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="form-group">
        <%= f.submit %>
      </div>
    </center>
  <% end %>

</div>